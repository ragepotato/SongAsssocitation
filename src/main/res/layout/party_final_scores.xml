<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:paddingTop = "30dp"
    android:paddingLeft = "25dp"
    android:paddingRight = "25dp"
    android:paddingBottom = "30dp"
    android:background="@drawable/background"
    android:layout_gravity="center"
    android:gravity="center"
    >
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thanks_for_playing"
        android:gravity="center"
        android:text="Game over! Results:"
        android:textSize="22dp"
        android:fontFamily="@font/fredokaone"
        android:layout_gravity="center_horizontal"
        />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highest_score"
        android:gravity="center"
        android:text="Hand the phone to:"
        android:textSize="20dp"
        android:fontFamily="@font/fredokaone"
        android:layout_gravity="center_horizontal"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longest_lasting"
        android:gravity="center"
        android:padding="5dp"
        android:text="Ellie"
        android:textSize="20dp"
        android:fontFamily="@font/fredokaone"
        android:layout_gravity="center_horizontal"
        />
    <Button
        android:id="@+id/ready_end_button"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:text= "End Game"
        android:textAllCaps="false"
        android:background="@drawable/bgpurple"
        android:fontFamily="@font/fredokaone"
        />

</LinearLayout>