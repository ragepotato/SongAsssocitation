<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/partyDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredokaone"
        android:gravity="center"
        android:padding="10dp"
        android:text="PARTY MODE (beta)"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/myLinearLayout"
        />

    <TextView
        android:id="@+id/partyDescription2"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredokaone"
        android:gravity="center"
        android:padding="8dp"

        android:text="Party Mode (shoutout to Dr. Johannsen) allows you to play Song Association with other people. Players will take turns giving each other words to guess. If you fail during your turn, you are automatically out of the game. Last persons standing wins!"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partyDescription"
        app:layout_constraintStart_toEndOf="@id/myLinearLayout"
        />


    <LinearLayout
        android:id="@+id/myLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        app:layout_constraintEnd_toStartOf="@id/partyDescription2"

    </LinearLayout>

    <Button
        android:id="@+id/playerNamesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bgpurple"
        android:fontFamily="@font/fredokaone"
        android:padding="8dp"
        android:text="Start Game"
        android:textAllCaps="false"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/myLinearLayout"
        app:layout_constraintTop_toBottomOf="@+id/partyDescription2" />

</androidx.constraintlayout.widget.ConstraintLayout>